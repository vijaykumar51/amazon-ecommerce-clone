<% layout("layout") -%>

	<div class="container">
		<div class="row">
			<% for(var i=0; i<products.length; i++) { %>
				<div class="col-md-4">
					<a href="/product/<%= products[i]._id %>"></a>
					<div class="thumbnail">
						<img src="<%= products[i].image %>" class="img-rounded product">
						<div class="caption">
							<h3>
								<%= products[i].name %>
							</h3>
							<p>
								<%= products[i].category.name %>
							</p>
							<p>
								<%= products[i].price %>
							</p>
						</div>
					</div>
				</div>
				<% } %>
		</div>
	</div>