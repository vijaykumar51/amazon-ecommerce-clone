<% layout("layout") -%>

	<div class="container">
		<div class="row">
			<div class="col-sm-6 col-md-4">
				<img class="img-circle img-responsive img-center" src="<%= user.profile.picture %>" alt="">
				<br>
				<p>Name:
					<%= user.profile.name %>
				</p>
				<p>Email:
					<%= user.email %>
				</p>
				<% if (!user.profile.address) { %>
					<p>Address:
						<span>You haven't provided any address</span>
					</p>
					<% } else { %>
						<p>Address:
							<%= user.profile.address %>
						</p>
						<% } %>
							<a href="/edit-profile" class="btn btn-primary btn-bg">Edit Profile</a>
			</div>
		</div>

	</div>